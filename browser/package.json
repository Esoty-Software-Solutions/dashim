{
  "name": "dashim-browser-client",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./node_modules/.vite",
    "build": "run-p type-check build-only",
    "build:analyze": "vite build --mode analyze",
    "build:clean": "rimraf dist",
    "preview": "vite preview",
    "lint": "eslint . --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint && prettier \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@trpc/client": "^10.6.0",
    "@vueuse/core": "^10.7.1",
    "abort-controller": "^3.0.0",
    "debounce": "^1.2.1",
    "lodash": "^4.17.21",
    "pinia": "^2.1.7",
    "vue": "^3.4.1",
    "vue-query": "^1.26.0",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.9",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@mdi/js": "^7.2.96",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/debounce": "^1.2.4",
    "@types/jsdom": "^21.1.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.5.7",
    "@types/webfontloader": "^1.6.35",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "latest",
    "eslint-plugin-vuejs-accessibility": "^2.2.0",
    "eslint-plugin-vuetify": "^2.0.5",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.66.1",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.2.0",
    "vite": "^5.0.10",
    "vite-plugin-vuetify": "^2.0.1",
    "vitest": "^0.34.3",
    "vue-tsc": "^1.8.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,vue,htm,html,md}": "npm run lint:fix -w dashim-browser-client"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
